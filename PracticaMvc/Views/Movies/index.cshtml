<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   <div class="content-page">
        <div class="content">
            <div class="container-fluid mt-4">
                <div class="row justify-content-center">
                    <!-- AÃ±adimos la clase justify-content-center para centrar el contenido -->
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <button type="button" class="btn btn-secondary" data-bs-toggle="modal"
                                    data-bs-target="#agregarUsuarioModal">
                                    Agragar nuevo Usuario
                                </button>
                                <div class="table-responsive mt-4">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <tr class="bg-secondary text-white">
                                            <tr>
                                                <th>Id</th>
                                                <th>Pelicula</th>
                                                <th>Director</th>
                                                <th>Fecha</th>
                                                <th>Acciones</th>

                                            </tr>
                                        </thead>

                                        @foreach (var movie in Model)
                                        {
                                            <tr>
                                                <td>@movie.Id</td>
                                                <td>@movie.Title</td>
                                                <td>@movie.Director</td>
                                                <td>@movie.Date</td>

                                                <td>
                                                    <a href="@Url.Action("Details", "MovieDB", new { id = @movie.Id })"
                                                        class="btn btn-primary">Detalles</a>
                                                    <a asp-action="Edit" asp-route-id="@movie.Id">Editar</a>
                                                    <a asp-action="Delete" asp-route-id="@movie.Id">Eliminar</a>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                     </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>